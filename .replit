modules = ["python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["livekit"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LiveKit Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Alex Agent"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install livekit-agents livekit-plugins-openai livekit-plugins-deepgram livekit-plugins-elevenlabs flask python-dotenv"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "LiveKit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "livekit-server --dev --bind 0.0.0.0 --port 7880"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Alex Agent"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python agent.py dev"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 7880
externalPort = 3001

[[ports]]
localPort = 7881
externalPort = 3000
